@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<link href="~/css/auth.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!--Tabs Titles-->
        <!--Icon-->
        <div class="fadeIn first">
            <img src="https://www.kindpng.com/picc/m/24-248394_user-icon-hd-png-download.png" id="icon" alt="User Icon" />
            <br />
            <h2 style="margin:0px;">Log In</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (TempData["message"] != null)
        {
            <div class="text-success">@TempData["message"]</div>
        }
        <!--Login Form-->
        <form asp-action="Login" asp-controller="Auth" method="post" asp-route-aktar="@ViewBag.aktar">
            <input asp-for="Email" type="email" class="fadeIn fourth" placeholder="Email" />
            <br />
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Username" class="fadeIn fifth" placeholder="Username" />
            <br />
            <span asp-validation-for="Username" class="text-danger"></span>
            <input asp-for="Password" class="fadeIn sixth" placeholder="Password" />
            <br />
            <span asp-validation-for="Password" class="text-danger"></span>
            <input class="fadeIn seventh" type="submit" value="Log In" />
        </form>
        @*Register?*@
        <div id="formFooter">
            <a asp-action="Register" asp-controller="Auth" class="underlineHover">Register?</a>
        </div>
    </div>
</div>